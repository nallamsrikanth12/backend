pipeline {
    agent {
        label 'Agent-1'
    }
    options {
        timeout(time: 1, unit: 'HOURS')
        disableConcurrentBuilds()
        ansiColor('xterm')
    }
    environment {
        def appversion = ''
        nexusUrl = 'nexus.srikantheswar.online:8081'
       
    }
    stages {
        stage('read the json file') { 
            steps {
                script {
                    def packagejson = readJSON file: 'package.json'
                    appversion = packagejson.version
                    echo "application is ${appversion}"
                }
                
            }
        }
        stage('npm install') { 
            steps {
                sh """
                 npm install
                 ls -ltr
                 echo "application is ${appversion}"
                """
            }
        }


        stage('build') { 
            steps {
                sh """
                 zip -q -r backend-${appversion}.zip * -x jenkinsfiless -x jenkinsfile -x jenkinsfiles -x backend-${appversion}.zip
                 ls -ltr
                 echo "application is ${appversion}"
                """
            }
        }
        stage ('deploy the artifacts') {
            steps {
                script {

                nexusArtifactUploader(
                        nexusVersion: 'nexus3',
                        protocol: 'http',
                        nexusUrl: "${nexusUrl}",
                        groupId: 'com.expense',
                        version: "${appversion}",
                        repository: 'backend',
                        credentialsId: 'nexus-auth',
                        artifacts: [
                            [
                                artifactId: "backend",
                                classifier: '',
                                file: "backend.${appversion}.zip",
                                type: 'zip'
                            ]
                        ]
                    )
                }
            }
        }
        
    }
    post {
        always {
            echo 'i will run always'
            deleteDir()

        }
        success {
            echo 'i will run pipeline is success'
        }
        failure {
            echo  'i will run pipeline is failure'
        }
    }
}